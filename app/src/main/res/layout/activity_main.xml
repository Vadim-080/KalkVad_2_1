            <Button
                android:id="@+id/buPlusMem"
                android:layout_marginTop="3pt"
                android:layout_marginRight="2pt"
                android:layout_weight="3"
                android:width="30pt"
                android:height="28pt"
                android:backgroundTint="@color/CV24"
                android:onClick="memori"
                android:rotation="-5"
                android:text="M+"
                android:textColor="@color/white"
                android:textSize="10pt"
                app:cornerRadius="800dp"
                app:strokeColor="@color/CV25"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/buZapMem"
                android:layout_marginTop="3pt"
                android:layout_marginRight="2pt"
                android:layout_weight="3"
                android:width="30pt"
                android:height="28pt"
                android:backgroundTint="@color/CV24"
                android:onClick="memori"
                android:rotation="-5"
                android:text="MV"
                android:textColor="@color/CV45"
                android:textSize="10pt"
                app:cornerRadius="800dp"
                app:strokeColor="@color/CV25"
