                app:cornerRadius="15dp"
                app:strokeColor="@color/CV15"
                app:strokeWidth="3dp" />

        </TableRow>

        <!--Третий ряд кнопок  +/-, %, КОРЕНЬ ... -->

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buPlusMinus"
                android:layout_marginLeft="2pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/CV29"
                android:fontFamily="@font/rbutus"
                android:onClick="clickNumber"
                android:text="±"
                android:textColor="@color/CV10"
                android:textSize="15pt"
                android:textStyle="bold"
                app:cornerRadius="10dp"
                app:strokeColor="@color/CV18"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/buPercent"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="30pt"
                android:backgroundTint="@color/CV29"
                android:fontFamily="@font/rbutus"
                android:onClick="clickProcent"
                android:text="%"
                android:textColor="@color/CV10"
                android:textSize="15pt"
                android:textStyle="bold"
                app:cornerRadius="10dp"
                app:strokeColor="@color/CV18"
                app:strokeWidth="3dp" />

            <Button
