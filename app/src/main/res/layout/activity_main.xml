                android:onClick="clickNumber"
                android:text="8"
                android:textColor="@color/CV3"
                android:textSize="20pt"
                android:textStyle="bold"
                app:cornerRadius="100dp"
                app:strokeColor="@color/CV14"
                app:strokeWidth="4dp" />

            <Button
                android:id="@+id/bu9"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
