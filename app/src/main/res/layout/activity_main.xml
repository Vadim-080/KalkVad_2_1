                android:height="35pt"
                android:background="@drawable/ripple_bg2"
                android:fontFamily="@font/rbutus"
                android:onClick="clickNumber"
                android:text="4"
                android:textColor="@color/CV3"
                android:textSize="20pt"
                android:textStyle="bold"
                app:cornerRadius="100dp"
                app:strokeColor="@color/CV14"
                app:strokeWidth="4dp" />

            <Button
                android:id="@+id/bu5"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="35pt"
                android:background="@drawable/ripple_bg2"
                android:fontFamily="@font/rbutus"
                android:onClick="clickNumber"
                android:text="5"
                android:textColor="@color/CV3"
                android:textSize="20pt"
                android:textStyle="bold"
                app:cornerRadius="100dp"
                app:strokeColor="@color/CV14"
                app:strokeWidth="4dp" />

            <Button
