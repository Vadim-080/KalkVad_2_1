                android:background="@drawable/ripple_bg4"
                android:fontFamily="@font/rbutus"
                android:onClick="clickNumber"
                android:text="0"
                android:textColor="@color/CV3"
                android:textSize="20pt"
                android:textStyle="bold"
                app:cornerRadius="50dp"
