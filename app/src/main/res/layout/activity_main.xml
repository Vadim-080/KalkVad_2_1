<?xml version="1.0" encoding="utf-8"?>

<!--Контейнер LinearLayout представляет простейший контейнер - объект ViewGroup, который
упорядочивает все дочерние элементы в одном направлении: по горизонтали или по вертикали.
Все элемены расположены один за другим-->


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/CV13"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- поле ячейки памяти -->

    <!-- поле хода вычисления-->

    <TextView
        android:id="@+id/znak"
        android:layout_width="match_parent"
        android:layout_height="12pt"
        android:layout_marginLeft="1pt"
        android:layout_marginRight="2pt"
        android:autoSizeTextType="uniform"
        android:background="@drawable/rounded_verch"
        android:gravity="left"
        android:paddingLeft="3pt"
        android:textColor="@color/CV28"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vichislen"
        android:layout_width="match_parent"
        android:layout_height="13pt"
        android:layout_marginLeft="1pt"
        android:layout_marginRight="2pt"
        android:autoSizeTextType="uniform"
        android:background="@color/CV26"
        android:fontFamily="@font/contact"
        android:gravity="right|center"
        android:paddingRight="5pt"
        android:text=""
        android:textColor="@color/CV27"
        android:textStyle="bold" />

    <!-- поле ОТВЕТА -->
    <!-- android:maxLength="13"-->

    <!--Поле хода набора чисел и знаков-->

    <!--Контейнер структурирует элементы управления в виде таблицы по столбцам и строкам-->


    <TextView
        android:id="@+id/otvet"
        android:layout_width="match_parent"
        android:layout_height="35pt"
        android:layout_marginLeft="1pt"
        android:layout_marginTop="0.2pt"
        android:layout_marginRight="2pt"
        android:autoSizeTextType="uniform"
        android:background="@color/CV20"
        android:fontFamily="@font/abrilfatface_regular"
        android:gravity="center"
        android:paddingLeft="5pt"
        android:paddingRight="5pt"
        android:text="0"
        android:textColor="@color/CV20" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="34pt"
        android:layout_marginLeft="1pt"
        android:layout_marginTop="0.2pt"
        android:layout_marginRight="2pt"
        android:autoSizeTextType="uniform"
        android:background="@drawable/rounded_niz"
        android:fontFamily="@font/strslupw"
        android:gravity="right|center"
        android:paddingLeft="3pt"
